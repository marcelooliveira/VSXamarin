<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.LoginView"
             xmlns:vm="clr-namespace:TestDrive.ViewModels"
             Title="Test Drive">
    <ContentPage.BindingContext>    
        <vm:LoginViewModel></vm:LoginViewModel>
    </ContentPage.BindingContext>
    <StackLayout VerticalOptions="Center" Margin="64">
        <Entry Placeholder="Usuário" Text="{Binding Usuario}"/>
        <Entry Placeholder="Senha" Text="{Binding Senha}" IsPassword="True"/>
        <Button Text="Entrar" Command="{Binding EntrarCommand}"/>
    </StackLayout>
</ContentPage>