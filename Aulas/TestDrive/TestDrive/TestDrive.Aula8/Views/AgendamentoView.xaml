<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.AgendamentoView"
             Title="{Binding Path=Veiculo.nome}">
    <StackLayout Padding="25">
        <ActivityIndicator IsRunning="{Binding Aguarde}"
                           IsVisible="{Binding Aguarde}">
        </ActivityIndicator>
        <TableView Intent="Form">
            <TableRoot Title="Agendamento">
                <TableSection Title="Seus Dados">
                    <EntryCell Label="Nome:" Keyboard="Text" Text="{Binding Nome, Mode=TwoWay}" />
                    <EntryCell Label="Fone:" Keyboard="Telephone" Text="{Binding Fone, Mode=TwoWay}" />
                    <EntryCell Label="E-mail:" Keyboard="Email" Text="{Binding Email, Mode=TwoWay}"/>
                </TableSection>
                <TableSection Title="Agendamento">
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="16,0,16,0">
                            <Label Text="Data:" HorizontalOptions="StartAndExpand"></Label>
                            <DatePicker HorizontalOptions="End"
                                    Date="{Binding DataAgendamento, Mode=TwoWay}"></DatePicker>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="16,0,16,0">
                            <Label Text="Hora:" HorizontalOptions="StartAndExpand"></Label>
                            <TimePicker HorizontalOptions="End"
                                    Time="{Binding HoraAgendamento, Mode=TwoWay}"></TimePicker>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Agendar" Command="{Binding AgendamentoCommand}"></Button>
    </StackLayout>
</ContentPage>

